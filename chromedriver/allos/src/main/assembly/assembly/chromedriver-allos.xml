<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>drivers</id>

    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>

    <files>

        <file>
            <source>${basedir}/target/drivers/linux-x86-32/chromedriver</source>
            <outputDirectory>/drivers</outputDirectory>
            <destName>chromedriver-linux-x86-32</destName>
        </file>
        <file>
            <source>${basedir}/target/drivers/linux-x86-64/chromedriver</source>
            <outputDirectory>/drivers</outputDirectory>
            <destName>chromedriver-linux-x86-64</destName>
        </file>
        <file>
            <source>${basedir}/target/drivers/macosx-x86-64/chromedriver</source>
            <outputDirectory>/drivers</outputDirectory>
            <destName>chromedriver-macosx-x86-64</destName>
        </file>
        <file>
            <source>${basedir}/target/drivers/windows-x86-32/chromedriver.exe</source>
            <outputDirectory>/drivers</outputDirectory>
            <destName>chromedriver-windows-x86-32.exe</destName>
        </file>

    </files>

</assembly>